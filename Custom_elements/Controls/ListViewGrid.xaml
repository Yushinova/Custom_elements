<UserControl x:Class="Custom_elements.Controls.ListViewGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Custom_elements.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="780">
    <Grid Width="780">
        <StackPanel Orientation="Horizontal" Background="White">
            <TextBlock Width="270" Height="30" Text="{Binding Path = Name}"/>
            <TextBlock Width="200" Height="30" Text="{Binding Path = Country}"/>
            <TextBlock Width="80" Height="30" Text="{Binding Path = Age}"/>
            <TextBlock Width="230" Height="30" Text="{Binding Path = Emale}"/>
        </StackPanel>
    </Grid>
</UserControl>
